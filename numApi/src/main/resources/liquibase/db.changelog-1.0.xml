                <constraints nullable="true" unique="false"/>
            </column>

            <column name="weight" type="float">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="height" type="float">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="average_mark" type="float">
                <constraints nullable="true" unique="false"/>
            </column>

        </createTable>
    </changeSet>

